{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb/base",
        "plugin:sonarjs/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["sonarjs"],
    "rules": {
        "semi": "off",
        "no-undef": "off",
        "no-alert": "off",
        "arrow-body-style": "off",
        "sonarjs/cognitive-complexity": "error",
        "sonarjs/no-identical-expressions": "error"
    }
}
